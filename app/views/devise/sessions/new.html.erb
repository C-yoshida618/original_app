<%= render "shared/header" %>

<main>
  <h1>Log in</h1>
  <div class="session-form">
    <%= form_for(resource, as: resource_name, url: new_user_session_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email %>
      </div>
      <div class="field">
        <%= f.label :password %> <i>(6 characters minimum)</i><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
      <br>
      <br>
      <div class="link-btn-box">
        <%= f.submit "Log in", class: "link-btn" %>
      </div>
    <% end %>
  </div>
</main>

<%= render "shared/footer" %>
