<%= render "shared/header" %>

<main>
  <h1>Log in</h1>
  <div class="session-form">
    <%= form_with(model: resource, url: session_path(resource_name), method: :post, local: true) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email %>
      </div>
      <div class="field">
        <%= f.label :password %> <i>(6 characters minimum)</i><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
      <br>
      <br>
      <div class="link-btn-box">
        <%= f.submit "Log in", class: "link-btn" %>
      </div>
    <% end %>
  </div>
  <%= button_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, data: { turbo: false } %>
</main>

<%= render "shared/footer" %>
